<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd" >

    <changeSet id="create-roles" author="Vaganov.VS">
        <createTable tableName="roles">
            <column name="id" type="bigserial" remarks="ИД роли">
                <constraints primaryKey="true" />
            </column>
            <column name="role_name" type="varchar" remarks="Название роли" />
        </createTable>
    </changeSet>
    <changeSet id="insert_roles" author="Vaganov.VS">
        <insert tableName="roles">
            <column name="id" value="1"/>
            <column name="role_name" value="SUPERUSER"/>
        </insert>
        <insert tableName="roles">
            <column name="id" value="2"/>
            <column name="role_name" value="USER"/>
        </insert>
    </changeSet>
</databaseChangeLog>